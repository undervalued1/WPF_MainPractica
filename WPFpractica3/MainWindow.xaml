<Window x:Class="WPFpractica3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFpractica3"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="Height" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Style="{DynamicResource ThemeMenu}">
            <MenuItem Header="Настройки" Click="MenuItem_Click">
                <MenuItem Header="Изменить тему"/>
            </MenuItem>
        </Menu>
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
   
</Window>

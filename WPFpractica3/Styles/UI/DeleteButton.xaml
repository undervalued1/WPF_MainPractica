
    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


        <Style TargetType="Button" x:Key="DeleteButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <Border Background="{TemplateBinding Background}"
              BorderBrush="{TemplateBinding BorderBrush}"
              Height="{TemplateBinding Height}"
              Width="{TemplateBinding Width}"
              CornerRadius="10">
                            <ContentPresenter VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Background" Value="{DynamicResource ButtonDeleteBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextOnButtonBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ButtonDeleteHoverBrush}"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="20,10,20,10"/>
            <!--Мусорка-->
            <Setter Property="Content" Value="&#x1F5D1;"/>
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
            <Setter Property="FontSize" Value="16"/>


        <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ButtonDeleteHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ButtonDeleteBrush}"/>
                </Trigger>
            </Style.Triggers>

        </Style>
    </ResourceDictionary>

<Page x:Class="WPFpractica3.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFpractica3.Pages"
      xmlns:classes="clr-namespace:WPFpractica3.Classes"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800" Background="LightGray"
      Title="Registration">

    <Page.Resources>
        <classes:Doctor x:Key="doctor"/>
    </Page.Resources>
    
 
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Регистрация" Style="{DynamicResource NamePage}"/>
                <StackPanel  DataContext="{StaticResource doctor}">
                    <!--Поле регистрации-->
                    <Label Content="Фамилия" />
                    <TextBox  Text="{Binding LastName}"/>

                    <Label Content="Имя"/>
                    <TextBox Text="{Binding Name}"/>

                    <Label Content="Отчевство"/>
                    <TextBox Text="{Binding MiddleName}"/>

                <Label Content="Специальность"/>
                <TextBox Text="{Binding Specialization}"/>

                    <Label Content="Пароль" />
                    <TextBox Text="{Binding Password}"/>

                    <Button Content="Регистрация" Name="ButtonRegistr" Click="ButtonRegistr_Click"/>
                    <Button Content="Войти"
                            Click="ButtonGoEnter_Click" Name="ButtonGoEnter"/>
                </StackPanel>
            </StackPanel>
            
        </Grid>

    
</Page>

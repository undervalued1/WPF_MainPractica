<Page x:Class="WPFpractica3.Pages.RedactingPacient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFpractica3.Pages"
      xmlns:classes="clr-namespace:WPFpractica3.Classes"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800" Background="LightGray"
      Title="Registration">



        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
            <Label Content="Изменить информацию о пациенте" Style="{DynamicResource NamePage}"/>
                <StackPanel>
                    <Label Content="Имя:"/>
                    <TextBox Text="{Binding Name}"/>
                    <Label Content="Фамиия:"/>
                    <TextBox Text="{Binding LastName}"/>
                    <Label Content="Отчевство:"/>
                    <TextBox Text="{Binding MiddleName}"/>
                    <Label Content="Номер телефона:"/>
                    <TextBox Text="{Binding PhoneNumber}"/>
                    <Label Content="Дата рождения:"/>
                    <DatePicker SelectedDate="{Binding DateBirthday}"/>
                    <Button Content="Изменить" Name="EditPacientButton" Click="EditPacientButton_Click"/>
                    <Button Content="Назад" Name="GoBackButton" Click="GoBackButton_Click"/>
                </StackPanel>
            </StackPanel>


        </Grid>


</Page>
